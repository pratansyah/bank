{
	"compilerOptions": {
		"module": "commonjs",
		"sourceMap": true,
		"target": "es6",
		"noImplicitAny": false,
		"outDir": "./dist",
		"emitDecoratorMetadata": true,
		"experimentalDecorators": true,
		"lib": [
			"es5", "es6","DOM"
		],
		"baseUrl": ""
	},
	"watchOptions": {
    "watchFile": "useFsEvents",
    "watchDirectory": "useFsEvents",
    "fallbackPolling": "dynamicPriority",
    "synchronousWatchDirectory": true,
    "excludeDirectories": ["**/node_modules", "_build"]
  },
	"experimentalDecorators": true,
	"files": [
		"src/index.ts"
	],
	"include": [
		"src/**/*"
	],
	"exclude": [
		"node_modules"
	]
}
